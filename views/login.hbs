<body>
  <div class="wrapper fadeInDown">
    <div id="formContent">
      <!-- Tabs Titles -->
      <h2 class="active"> Inicia Sesion </h2>
      <a href="/registrate">
        <h2 class="inactive underlineHover">Registrate</h2>
      </a>
      <!-- Icon -->
      <div class="fadeIn first">
        <img src="/img/taquero.jpg" id="icon" alt="User Icon" />
        {{#if message}}
        <div class="alert alert-warning" role="alert">
          <h1> {{message}}</h1>
        </div>
        {{/if}}
      </div>
      <!-- Login Form -->
      <form action="/api/login" method="POST">
        <input type="text" id="login" class="fadeIn second" name="usuario" placeholder="Usuario" maxlength="15" required>
        <input type="password" id="password" class="fadeIn third" name="pass" placeholder="Password" required>
        <a><input type="submit" class="fadeIn fourth" value="Entrar" /></a>
      </form>
    </div>
  </div>


</body>