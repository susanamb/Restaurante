          </select><br>
            <input type="password" id="password" class="fadeIn third" name="clave" placeholder="Clave" pattern="[A-Za-z0-9_-]{1,15}" maxlength="10" required>
            <input type="password" id="confirmapassword" class="fadeIn third" name="confirmaclave" placeholder="Confirma clave" pattern="[A-Za-z0-9_-]{1,15}" maxlength="10" required>

            <input type="password" id="login" class="fadeIn second" name="claveg" placeholder="Clave Gerente" required>
            <a href="api/login"><input type="submit" class="fadeIn fourth"  value="Guardar"/></a>
          </form>
      
      
        </div>
        
      </div>

