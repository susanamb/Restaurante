<body>
    <div class="wrapper fadeInDown">
        <div id="formContent">
          <!-- Tabs Titles -->
          <a href="/"><h2 class="inactive underlineHover"> Inicia Sesion </h2></a>
          <h2 class="active">Registrate</h2>
      
          <!-- Icon -->
          <div class="fadeIn first">
            <img src="/img/taquero.jpg" id="icon" alt="User Icon" />
          </div>
          {{#if message }}
