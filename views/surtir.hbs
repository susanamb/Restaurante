<body>
    <div class="w3-container" style="margin-top:80px; margin-left: 15%;" id="showcase">
    <h1 class="w3-jumbo"><b>Administrativo</b></h1>
    <h1 class="w3-xxxlarge w3-text-blue-gray"><b>Surtir productos</b></h1>
    <hr style="width:50px;border:5px solid paleturquoise" class="w3-round">
  </div>
  {{#if message }}
        <div class="alert alert-{{tipo}}" role="alert" style="width: 70%;">
          <h1> {{message}}</h1>
        </div>
        {{/if}}
  <table id="myTable" class="table table-striped table-responsive-md btn-table" style="background-color: #ffff; width:70%; margin-left:15%; margin-right:15%">
  <div class="form-row align-items-center">
    <div class="col-auto my-1">
        <form action="/api/surtido" method="POST">
        <tr>
            <td>
                <select class="custom-select mr-sm-2" name="id" id="inlineFormCustomSelect" required>
                    <option selected value="non">Elige..</option>
                    {{#each productos}}
                    <option value="{{id}}">{{nombre}}</option>
                    {{/each}}
                </select>
        </td>
      </tr>
    </div>
    <tr>
        <td>

            <div class="col-auto my-1">
            <div class="custom-control custom-checkbox mr-sm-2">
                <label class="" for="customControlAutosizing">Cantidad a surtir</label>
                <input type="number" min="1" max="1000" id="customControlAutosizing" name="cantidad" required>

            </div>
            </div>
        </td>
    </tr>
    <tr>
        <td>
            <div class="col-auto my-1">
            <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            <a href="/api/admin"><button type="submit" class="btn btn-primary">Cancelar</button></a>
            </div>
        </td>
    </tr>
  </div>
</table>