                <td><input class="w3-xlarge" type="number" name="und" id="" value="0"></td>  
            </tr>
            <tr>
                <td>$50=</td>
                <td><input class="w3-xlarge" type="number" name="cincuenta" id="" value="0"></td>
                <td>$5=</td>
                <td><input class="w3-xlarge" type="number" name="cincod" id="" value="0"></td>
            </tr>
            <tr>
                <td>$100=</td>
                <td><input class="w3-xlarge" type="number" name="cien" id="" value="0"></td>
