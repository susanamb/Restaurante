                <td><input class="w3-xlarge" type="number" name="cincuentad" id="" value="0"></td>
            </tr>
            <tr>
                <td colspan="2">Monedas</td>
                <td>$100=</td>
                <td><input class="w3-xlarge" type="number" name="ciend" id="" value="0"></td>
            </tr>
            <tr>
                <td>Total=</td>
                <td><input class="w3-xlarge" type="number" name="monedas" id="" value="0"></td>
                <td rowspan="2" colspan="2"><a href="/api/logout"><input type="submit" value= "Guardar"></a></td>
            </tr>
        </table>
        </div>       
    </form>
    </div>
    <div style="float: right; width: 30%;">
        <a href="/inicio"><button type="button" class="btn btn-primary btn-lg">Regresar</button></a>
