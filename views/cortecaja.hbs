        <table class=" w3-light-grey w3-center" style="width: 70%; border:1; font-size:80%">
            <tr >
                <td colspan=2>Billetes M.N</td>
                <td colspan=2>Billetes Dolar</td>
            </tr>
            <tr>
                <td>$20=</td>
                <td><input class="w3-xlarge" type="number" name="veinte" id="" value="0"></td>
