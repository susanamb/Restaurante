<div class="w3-container" style="margin-top:80px; margin-left: 10%;" id="showcase">
    <h1 class="w3-jumbo"><b>Corte de caja</b></h1>
    <h1 class="w3-xxxlarge w3-text-blue-gray"><b>Cajero(a)</b></h1>
    <hr style="width:50px;border:5px solid paleturquoise" class="w3-round">
  </div>
  
  <div class="w3-row-padding">
    <div class="w3-half w3-margin-bottom w3-xxxlarge">
        {{#if messages.error}}
        <div class="alert alert-warning" role="alert">
          <h1> {{messages.error}}</h1>
        </div>
        {{/if}}
    <form action="/api/cortecaja" method="POST">
